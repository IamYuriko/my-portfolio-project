---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Cursor from "../components/Cursor.astro";
import Loading from "../components/Loading.astro";
import "../styles/style.css";

const { title = "Narita Yuriko" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="title" content="Narita Yuriko" />
    <meta name="description" content="Narita Yuriko's Portfolio" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://heyimyuriko.com" />
    <meta property="og:site_name" content="Narita Yuriko" />
    <meta property="og:title" content="Narita Yuriko" />
    <meta property="og:description" content="Narita Yuriko's Portfolio" />
    <link
      rel="icon"
      type="image/png"
      href="/icons/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <link rel="shortcut icon" href="/icons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/icon/apple-touch-icon.png"
    />
  </head>
  <body>
    <Loading />
    <Cursor />
    <div class="fullHeight">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<script src="../scripts/script.js"></script>
